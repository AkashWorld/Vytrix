{
    "version": "2.0.0",
    "tasks": [{
        "label": "build",
        "command": "ninja", // Could be any other shell command
        "args": [],
        "type": "shell",
        "options": {
            "cwd": "${workspaceFolder}/bin"
        },
    },{
